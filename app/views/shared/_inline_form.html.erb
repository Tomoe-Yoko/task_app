<%# Turbo Frame 用 %>
<%= form_with model: @task,
              data: { turbo_frame: dom_id(@task) } do |f| %>

<div class="grid grid-cols-5 gap-4 items-center">
    <%= f.text_field :title, class: "border border-gray-300 rounded px-2 py-1" %>
    <%= f.text_field :content, class: "border border-gray-300 rounded px-2 py-1" %>
    <%= f.date_field :deadline, class: "border border-gray-300 rounded px-2 py-1" %>
    <p class="w-fit">
        <%= link_to "キャンセル", tasks_path,
          data: { turbo_frame: dom_id(@task) }, class: "px-4 py-3 bg-blue-500 text-white rounded-xl text-lg shadow hover:bg-blue-600 transition"%>
    </p>
    <p class="w-fit">
        <%= f.submit "更新" , class: "px-8 py-3 bg-sky-400 text-white rounded-xl text-lg shadow hover:bg-sky-500 transition"%>
    </p>
</div>
<% end %>