<header class="w-full h-20 bg-black fixed top-0 left-0 flex items-center justify-between px-5 shadow-md z-10">
    <div>
        <%= link_to "タスク一覧", root_path, id: "logo", class: "header-logo mr-4" %>
        <% if user_signed_in? && current_user.name.present? %>
            <span class="text-white mr-4">ようこそ、<%= current_user.name %>さん</span>
        <% end %>
    </div>
    <div>
        <% if user_signed_in? %>
            <%= link_to "管理者画面", admin_users_path, class: "ml-auto text-white hover:underline mr-4" %>
            <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "ml-auto text-white hover:underline" %>
        <% else %>
            <%= link_to "ログイン", new_user_session_path, class: "ml-auto text-white hover:underline" %>
        <% end %>
    </div>
</header>