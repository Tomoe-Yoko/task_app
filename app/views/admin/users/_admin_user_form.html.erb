<h2 class="block text-2xl font-bold text-center my-10">
    <%= @user.persisted? ? "ユーザー更新" : "ユーザー作成" %>
</h2>
<%= form_with(model: [:admin, @user], local: true) do |f| %>
<div class="max-w-3xl mx-auto space-y-10">
    <!-- name -->
    <div class="flex items-start space-x-6">
        <%=f.label :name, "名前", class: "w-[15%]" %>
        <%= f.text_field :name, class: "w-[80%] border border-gray-400 p-3 rounded"%>
    </div>
    <!-- email -->
    <div class="flex items-start space-x-6">
        <%=f.label :email, "メールアドレス", class: "w-[15%]" %>
        <%= f.email_field :email, class: "w-[80%] border border-gray-400 p-3 rounded" %>
    </div>
    <!-- password -->
    <div class="flex items-start space-x-6 w-full">
        <%=f.label :password, "パスワード", class: "w-[15%]" %>
        <%= f.password_field :password, class: "w-[80%] border border-gray-400 p-3 rounded"%>
    </div>
    <div class="flex items-start space-x-6 w-full">
        <%=f.label :password_confirmation, "パスワード確認", class: "w-[15%]" %>
        <%= f.password_field :password_confirmation, class: "w-[80%] border border-gray-400 p-3 rounded"%>
    </div>
    <!-- 保存ボタン -->
    <div class="text-center">
        <%= f.submit(@user.persisted? ? "更新" : "作成 " ,class: "btn") %>
    </div>
    <%end%>