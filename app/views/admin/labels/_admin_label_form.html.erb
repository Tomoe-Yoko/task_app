<h2 class="block text-2xl font-bold text-center my-10">
    <%= @label.persisted? ? "ラベル更新" : "ラベル作成" %>
</h2>
<%= form_with(model: [:admin, @label],data: { turbo: false }, local: true) do |f| %>
<div class="max-w-3xl mx-auto space-y-10">
    <!-- label -->
    <div class="flex items-start space-x-6">
        <%=f.label :name, "ラベル名", class: "w-[15%]" %>
        <%= f.text_field :name, class: "w-[80%] border border-gray-400 p-3 rounded"%>
    </div>


    <!-- 保存ボタン -->
    <div class="text-center">
        <%= f.submit(@label.persisted? ? "更新" : "作成 " ,class: "btn") %>
    </div>
</div>
<%end%>