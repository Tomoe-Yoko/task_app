<div class="flex justify-between items-center gap-4 my-8">
    <h2 class="text-2xl font-bold mb-6">ラベル一覧</h2>
    <%= link_to "ラベル新規作成", new_admin_label_path, class: "btn" %>
</div>
<ul class="min-w-full bg-white border border-gray-200 rounded-xl divide-y divide-gray-200"> <% @labels.each do |label|%>
    <li class="grid grid-cols-2 text-gray-700 font-semibold py-3 px-4">
        <span class="w-[30%] text-xl"><%= label.name %></span>
        <div class="flex justify-center items-center gap-4">
            <%= link_to "更新", edit_admin_label_path(label), class: "btn02 bg-sky-500 hover:bg-sky-600 transition" %>
            <%= link_to "削除", admin_label_path(label), data: {"turbo-method": :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn02 bg-red-500 hover:bg-red-600 transition" %>
        </div>
    </li>
    <% end %>
</ul>