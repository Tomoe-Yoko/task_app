<%= link_to  "一覧に戻る", tasks_path %>

<div>
  <h1 class="font-bold text-4xl"><%= @task.title %></h1>
  <p><%= @task.content %></p>
  <%= link_to  "編集", edit_task_path(@task) %>
  <%= link_to  "削除", task_path(@task), method: :delete, data: { "turbo-method": :delete,turbo_confirm:"本当に削除しますか？" } %>
</div>
